<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="4dp"
    app:cardElevation="7dp"
    app:cardUseCompatPadding="false"
    android:layout_margin="2dp"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
                android:id="@+id/img_auto"
                android:layout_width="140dp"
                android:layout_height="190dp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="8dp">


            <TextView
                android:id="@+id/tvNameProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:lines="1"
                android:ellipsize="end"
                tools:text="Combo 1 Play  ilimitado"
                android:textSize="20sp"
                android:fontFamily="@font/oswaldregular"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="3"
                android:ellipsize="end"
                tools:text="DescripciÃ³n del Combo"
                android:textSize="15sp"
                android:fontFamily="@font/zenkurenaidoregular"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tvPriceSale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/detail_total_price"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:fontFamily="@font/zenkurenaidoregular"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvQuantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/detail_quantity"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:fontFamily="@font/zenkurenaidoregular"/>
        </LinearLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>